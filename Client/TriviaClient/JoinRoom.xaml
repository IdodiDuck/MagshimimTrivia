<Window x:Class="TriviaClient.JoinRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient"
        mc:Ignorable="d"
        Title="JoinRoom" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Rooms list -->
            <ColumnDefinition Width="1*"/>
            <!-- Users list -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Texts Headers -->
            <RowDefinition Height="*"/>
            <!-- ListBoxes -->
            <RowDefinition Height="Auto"/>
            <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Texts Headers -->
        <TextBlock Text="Rooms" FontSize="14" FontWeight="Bold" Margin="10" Grid.Column="0" Grid.Row="0"/>
        <TextBlock Text="Users in Room" FontSize="14" FontWeight="Bold" Margin="10" Grid.Column="1" Grid.Row="0"/>
        <TextBlock x:Name="NoRoomsText" Text="No rooms available" Foreground="Gray" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10" Grid.Column="0" Grid.Row="1" Panel.ZIndex="1"/>    
         
        <!-- ListBoxes -->
        <ListBox x:Name="RoomsList" Grid.Column="0" Grid.Row="1" Margin="10"
             SelectionMode="Single" SelectionChanged="RoomsList_SelectionChanged"/>
        <ListBox x:Name="UsersList" Grid.Column="1" Grid.Row="1" Margin="10"/>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="2" Margin="10" HorizontalAlignment="Left">
            <Button x:Name="JoinRoomBtn" Content="Join" Width="100" Height="40"
                Click="JoinButton_Click" IsEnabled="False"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2" Margin="10" HorizontalAlignment="Right">
            <TextBlock x:Name="usernameText" VerticalAlignment="Center"
                   FontWeight="Bold" Foreground="DarkSlateGray" Margin="0,0,10,0"/>
            <Button x:Name="backMenuBtn" Content="Back to Menu" Width="120" Height="30"
                Click="BackButton_Click" Background="White" Foreground="Black"/>
        </StackPanel>
    </Grid>
</Window>
