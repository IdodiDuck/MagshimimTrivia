<Window x:Class="TriviaClient.JoinRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TriviaClient"
        mc:Ignorable="d"
        Title="JoinRoom" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>

            <ColumnDefinition Width="1*"/>

        </Grid.ColumnDefinitions>

        <ListBox x:Name="RoomsList" Margin="10,40,10,60" SelectionMode="Single"
             Grid.Column="0" SelectionChanged="RoomsList_SelectionChanged"/>

        <ListBox x:Name="UsersList" Margin="10,40,10,60" Grid.Column="1"/>

        <Button x:Name="JoinRoomBtn" Content="Join" Width="100" Height="40"
            HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,0,0,10"
            Click="JoinButton_Click" IsEnabled="False" Grid.Column="0"/>

        <Button x:Name="backMenuBtn" Content="Back to Menu" HorizontalAlignment="Right" Background="White"
            Foreground="Black" Margin="0,0,10,369" Click="BackButton_Click" Grid.Column="1"
            Height="20" VerticalAlignment="Bottom"/>

        <TextBlock x:Name="usernameText" HorizontalAlignment="Right" VerticalAlignment="Bottom"
               Margin="0,0,10,10" FontWeight="Bold" Foreground="DarkSlateGray" Grid.Column="1"/>
    </Grid>
</Window>
