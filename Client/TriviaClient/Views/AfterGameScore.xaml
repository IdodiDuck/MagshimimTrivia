<Page x:Class="TriviaClient.Views.AfterGameScore"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:TriviaClient.Views"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AfterGameScore">

    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Trivia Game - Final Scores"
                       Foreground="#FFCCCCCC"
                       FontSize="26" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Grid.ColumnSpan="2"
                       Margin="0,10,0,10"/>

            <Button Content="Back to Menu" Width="150" Height="40"
                    Click="BackToMenu_Click"
                    HorizontalAlignment="Right" VerticalAlignment="Top"
                    Grid.Column="1" Margin="0,10,10,0"/>
        </Grid>

        <!-- Main content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Score Table -->
            <StackPanel Grid.Column="0" HorizontalAlignment="Stretch">
                <Grid Background="#EEE" Margin="0,0,0,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Name" Grid.Column="0" FontWeight="Bold" Padding="8,4" />
                    <TextBlock Text="Correct Answers" Grid.Column="1" FontWeight="Bold" Padding="8,4" />
                    <TextBlock Text="Avg Time (s)" Grid.Column="2" FontWeight="Bold" Padding="8,4" />
                </Grid>

                <ItemsControl Name="ScoreDataGrid" Foreground="White">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#CCC" BorderThickness="0,0,0,1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Text="{Binding Name}" Grid.Column="0" Padding="8,4" />
                                    <TextBlock Text="{Binding CorrectAnswers}" Grid.Column="1" Padding="8,4" />
                                    <TextBlock Text="{Binding AvgTime}" Grid.Column="2" Padding="8,4" />
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Podium -->
            <StackPanel Grid.Column="1" Margin="40,0,0,0" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <!-- 2nd Place -->
                    <StackPanel Width="100" Height="120" Background="Silver" Margin="5" VerticalAlignment="Bottom">
                        <TextBlock Text="2nd Place" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Name="SecondPlaceName" Text="{Binding Path=SecondPlaceName}" TextAlignment="Center"/>
                        <TextBlock Name="SecondPlaceScore" Text="{Binding Path=SecondPlaceScore}" TextAlignment="Center"/>
                        <TextBlock Name="SecondPlaceTime" Text="{Binding Path=SecondPlaceTime}" TextAlignment="Center"/>
                    </StackPanel>

                    <!-- 1st Place -->
                    <StackPanel Width="120" Height="150" Background="Gold" Margin="5" VerticalAlignment="Bottom">
                        <TextBlock Text="1st Place" FontWeight="Bold" FontSize="16" TextAlignment="Center"/>
                        <TextBlock Name="FirstPlaceName" Text="{Binding Path=FirstPlaceName}" TextAlignment="Center"/>
                        <TextBlock Name="FirstPlaceScore" Text="{Binding Path=FirstPlaceScore}" TextAlignment="Center"/>
                        <TextBlock Name="FirstPlaceTime" Text="{Binding Path=FirstPlaceTime}" TextAlignment="Center"/>
                    </StackPanel>

                    <!-- 3rd Place -->
                    <StackPanel Width="100" Height="100" Background="#CD7F32" Margin="5" VerticalAlignment="Bottom">
                        <TextBlock Text="3rd Place" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Name="ThirdPlaceName" Text="{Binding Path=ThirdPlaceName}" TextAlignment="Center"/>
                        <TextBlock Name="ThirdPlaceScore" Text="{Binding Path=ThirdPlaceScore}" TextAlignment="Center"/>
                        <TextBlock Name="ThirdPlaceTime" Text="{Binding Path=ThirdPlaceTime}" TextAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
