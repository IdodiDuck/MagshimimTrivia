<Page x:Class="TriviaClient.Views.AfterGameScore"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TriviaClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AfterGameScore">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock Text="Trivia Game - Final Scores" FontSize="26" FontWeight="Bold"
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       Grid.Column="0" Margin="234,12,0,0"/>

            <Button Content="Back to Menu" Width="150" Height="40"
                    Click="BackToMenu_Click"
                    HorizontalAlignment="Center" VerticalAlignment="Top"
                    Grid.Column="1" Margin="0,9,0,0" />
        </Grid>

        <ScrollViewer Grid.Row="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20">

                <!-- Podium -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,30">
                    <!-- 2nd Place -->
                    <StackPanel Width="150" Background="Silver" Margin="0" VerticalAlignment="Bottom">
                        <TextBlock Text="2nd Place" FontSize="16" FontWeight="Bold" TextAlignment="Center" Height="27"/>
                        <TextBlock Name="SecondPlaceName" Text="{Binding Path=SecondPlaceName, UpdateSourceTrigger=PropertyChanged}" FontSize="14" TextAlignment="Center" Height="28"/>
                        <TextBlock Name="SecondPlaceScore" Text="{Binding Path=SecondPlaceScore, UpdateSourceTrigger=PropertyChanged}" FontSize="12" TextAlignment="Center" Height="20"/>
                        <TextBlock Name="SecondPlaceTime" Text="{Binding Path=SecondPlaceTime, UpdateSourceTrigger=PropertyChanged}" FontSize="12" TextAlignment="Center" Height="20"/>
                    </StackPanel>

                    <!-- 1st Place -->
                    <StackPanel Width="170" Height="150" Background="Gold" Margin="0" VerticalAlignment="Bottom">
                        <TextBlock Text="1st Place" FontSize="18" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Name="FirstPlaceName" Text="{Binding Path=FirstPlaceName, UpdateSourceTrigger=PropertyChanged}" FontSize="16" TextAlignment="Center"/>
                        <TextBlock Name="FirstPlaceScore" Text="{Binding Path=FirstPlaceScore, UpdateSourceTrigger=PropertyChanged}" FontSize="14" TextAlignment="Center"/>
                        <TextBlock Name="FirstPlaceTime" Text="{Binding Path=FirstPlaceTime, UpdateSourceTrigger=PropertyChanged}" FontSize="14" TextAlignment="Center"/>
                    </StackPanel>

                    <!-- 3rd Place -->
                    <StackPanel Width="150" Background="#CD7F32" Margin="0" VerticalAlignment="Bottom">
                        <TextBlock Text="3rd Place" FontSize="16" FontWeight="Bold" TextAlignment="Center"/>
                        <TextBlock Name="ThirdPlaceName" Text="{Binding Path=ThirdPlaceName, UpdateSourceTrigger=PropertyChanged}" FontSize="14" TextAlignment="Center"/>
                        <TextBlock Name="ThirdPlaceScore" Text="{Binding Path=ThirdPlaceScore, UpdateSourceTrigger=PropertyChanged}" FontSize="12" TextAlignment="Center"/>
                        <TextBlock Name="ThirdPlaceTime" Text="{Binding Path=ThirdPlaceTime, UpdateSourceTrigger=PropertyChanged}"  FontSize="12" TextAlignment="Center"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Width="500" Margin="0,10,0,0" HorizontalAlignment="Center">
                    <Grid Background="#EEE" Margin="0,0,0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Name" Grid.Column="0" FontWeight="Bold" Padding="8,4" />
                        <TextBlock Text="Correct Answers" Grid.Column="1" FontWeight="Bold" Padding="8,4" />
                        <TextBlock Text="Avg Time (s)" Grid.Column="2" FontWeight="Bold" Padding="8,4" />
                    </Grid>

                    <!-- Players Scores -->
                    <ItemsControl Name="ScoreDataGrid">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#CCC" BorderThickness="0,0,0,1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Name}" Grid.Column="0" Padding="8,4" />
                                        <TextBlock Text="{Binding CorrectAnswers}" Grid.Column="1" Padding="8,4" />
                                        <TextBlock Text="{Binding AvgTime}" Grid.Column="2" Padding="8,4" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
    