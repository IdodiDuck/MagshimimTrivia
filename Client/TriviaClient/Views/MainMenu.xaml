<Page x:Class="TriviaClient.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:TriviaClient"
      mc:Ignorable="d"
      Title="Trivia Game - Main Menu">

    <Grid>
        <!-- Main layout container -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with welcome message -->
        <Border Grid.Row="0" Background="#E5E5E5E5" Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="WelcomeText" 
                           Text="Hello, " 
                           Foreground="#FF333333"
                           FontSize="24"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
                
                <TextBlock x:Name="UserNameText"
                           Text="{Binding Path=Username, UpdateSourceTrigger=PropertyChanged}"
                           Foreground="#FF333333"
                           FontSize="24"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main content area with buttons -->
        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                <!-- Create Room Button -->
                <Button x:Name="CreateRoomBtn"
                        Content="Create Room"
                        Click="CreateRoomBtn_Click"
                        Margin="0,0,0,20"/>

                <!-- Join Room Button -->
                <Button x:Name="JoinRoomBtn"
                        Content="Join Room"
                        Click="JoinRoomBtn_Click"
                        Margin="0,0,0,20"/>

                <!-- Statistics Button -->
                <Button x:Name="StatisticsBtn"
                        Content="Personal Statistics"
                        Click="StatisticsBtn_Click"
                        Margin="0,0,0,20"/>

                <!-- Best Scores Button -->
                <Button x:Name="BestScoresBtn"
                    Content="Best Scores"
                    Click="BestScoresBtn_click"
                    Margin="0,0,0,20"/>
            </StackPanel>
        </Grid>

        <!-- Footer with sign out button -->
        <Border Grid.Row="2" Background="#E5E5E5E5" Padding="10">
            <Button x:Name="SignOutBtn"
                    Content="Sign Out"
                    HorizontalAlignment="Right"
                    Width="100"
                    Click="SignOutBtn_Click"/>
        </Border>
    </Grid>

    <Page.Resources>
        <!-- Button Styles -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#FF333333"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF007ACC"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SignOutButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#FF666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#FF007ACC"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>
</Page>