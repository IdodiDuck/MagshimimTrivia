<Page x:Class="TriviaClient.Signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Signup">

    <Grid>
        <Image Source="/Views/Images/loginBackground.jpg" Stretch="Fill" Panel.ZIndex="0"
               HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <Grid Background="#80000000" Panel.ZIndex="1"/>

        <Border CornerRadius="10" 
                Background="#FF2A2A2A" 
                Width="350" Height="500"
                VerticalAlignment="Center" HorizontalAlignment="Center"
                Panel.ZIndex="2">

            <StackPanel Margin="20" VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,3">
                    <TextBlock Text="Sign Up" 
                               Foreground="White"
                               FontSize="30" FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <TextBlock Text="Username" Foreground="#FFCCCCCC" Margin="5,0"/>
                <TextBox x:Name="UsernameTextBox" 
                         Height="40" Margin="0,5,0,5"
                         Padding="10"
                         Background="#FF3A3A3A"
                         Foreground="white"
                         BorderBrush="#FF555555"
                         BorderThickness="2"
                         CaretBrush="white"
                         TextChanged="InputUsername_TextChanged"/>

                <TextBlock Text="Email" Foreground="#FFCCCCCC" Margin="5,0"/>
                <TextBox x:Name="EmailTextBox" 
                         Height="40" Margin="0,5,0,5"
                         Padding="10"
                         Background="#FF3A3A3A"
                         Foreground="white"
                         BorderBrush="#FF555555"
                         BorderThickness="2"
                         CaretBrush="white"
                         TextChanged="InputEmail_TextChanged"/>

                <TextBlock Text="Password" Foreground="#FFCCCCCC" Margin="5,0"/>
                <Grid>
                    <PasswordBox x:Name="PasswordBox"
                                 Height="40" Padding="10"
                                 Background="#FF3A3A3A"
                                 Foreground="White"
                                 BorderBrush="#FF555555"
                                 BorderThickness="2"
                                 CaretBrush="White"
                                 PasswordChanged="PasswordBox_PasswordChanged"
                                 Visibility="Visible"/>
                    <TextBox x:Name="PasswordTextBox"
                             Height="40" Padding="10"
                             Background="#FF3A3A3A"
                             Foreground="White"
                             BorderBrush="#FF555555"
                             BorderThickness="2"
                             CaretBrush="White"
                             TextChanged="PasswordTextBox_TextChanged"
                             Visibility="Collapsed"/>
                </Grid>

                <CheckBox x:Name="ShowPasswordCheckBox"
          Content="Show Password"
          Margin="0,5,0,10"
          Foreground="White"
          Checked="ShowPasswordCheckBox_Checked"
          Unchecked="ShowPasswordCheckBox_Unchecked">
                    <CheckBox.Resources>
                        <Style TargetType="CheckBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="CheckBox">
                                        <StackPanel Orientation="Horizontal">
                                            <Border Width="16" Height="16" Margin="0,0,5,0"
                                    Background="Transparent"
                                    BorderBrush="#FFFF9800"
                                    BorderThickness="2">
                                                <Path x:Name="CheckMark"
                                      Data="M0,4 L3,7 L8,0"
                                      Stroke="#FFFF9800"
                                      StrokeThickness="2"
                                      Visibility="Collapsed"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                                            </Border>
                                            <ContentPresenter VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsChecked" Value="True">
                                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </CheckBox.Resources>
                </CheckBox>


                <TextBlock x:Name="ErrorTextBlock"
                           Foreground="Red"
                           FontWeight="Bold"
                           Margin="0,-10,0,0"
                           Visibility="Collapsed"
                           TextWrapping="Wrap"/>

                <Button x:Name="SignUpButton" 
                         Content="Sign Up"
                         Height="40" Margin="0"
                         Background="#EAEAEAEA"
                         Foreground="#FF3A3A3A"
                         FontWeight="Bold"
                         BorderThickness="0"
                         Cursor="Hand"
                         IsEnabled="False"
                         Click="SignUpButton_Click" Width="310"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="Already have an account? " Foreground="#FFAAAAAA"/>
                    <TextBlock Text="Login" 
                               Foreground="#FF4DA6FF"
                               Cursor="Hand"
                               MouseLeftButtonUp="Login_MouseLeftButtonUp"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
