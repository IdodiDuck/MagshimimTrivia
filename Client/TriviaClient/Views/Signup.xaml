<Page x:Class="TriviaClient.Signup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="Signup">

    <Grid Background="#FF1E1E1E">
        <!-- Main content container -->
        <Border CornerRadius="10" 
                Background="#FF2A2A2A" 
                Width="350" Height="450"
                VerticalAlignment="Center" HorizontalAlignment="Center">

            <StackPanel Margin="20" VerticalAlignment="Center">
                <!-- Header with logo -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,3">
                    <TextBlock Text="Sign Up" 
                               Foreground="White"
                               FontSize="30" FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Username field -->
                <TextBlock Text="Username" Foreground="#FFCCCCCC" Margin="5,0"/>
                <TextBox x:Name="UsernameTextBox" 
                         Height="40" Margin="0,5,0,5"
                         Padding="10"
                         Background="#FF3A3A3A"
                         Foreground="white"
                         BorderBrush="#FF555555"
                         BorderThickness="2"
                         CaretBrush="white"
                         TextChanged="InputUsername_TextChanged"/>

                <!-- Email field -->
                <TextBlock Text="Email" Foreground="#FFCCCCCC" Margin="5,0"/>
                <TextBox x:Name="EmailTextBox" 
                         Height="40" Margin="0,5,0,5"
                         Padding="10"
                         Background="#FF3A3A3A"
                         Foreground="white"
                         BorderBrush="#FF555555"
                         BorderThickness="2"
                         CaretBrush="white"
                         TextChanged="InputEmail_TextChanged"/>

                <!-- Password field -->
                <TextBlock Text="Password" Foreground="#FFCCCCCC" Margin="5,0"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="40" Margin="0,5,0,5"
                             Padding="10"
                             Background="#FF3A3A3A"
                             Foreground="white"
                             BorderBrush="#FF555555"
                             BorderThickness="2"
                             CaretBrush="white"
                             PasswordChanged="PasswordBox_PasswordChanged"/>
                <TextBlock x:Name="ErrorTextBlock"
                           Foreground="Red"
                           FontWeight="Bold"
                           Margin="0,-10,0,0"
                           Visibility="Collapsed"
                           TextWrapping="Wrap"/>
                
                <!-- Sign up button -->
                <Button x:Name="SignUpButton" 
                         Content="Sign Up"
                         Height="40" Margin="0"
                         Background="#EAEAEAEA"
                         Foreground="#FF3A3A3A"
                         FontWeight="Bold"
                         BorderThickness="0"
                         Cursor="Hand"
                         IsEnabled="False"
                         Click="SignUpButton_Click" Width="310"/>

                <!-- Back to login link -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="Already have an account? " Foreground="#FFAAAAAA"/>
                    <TextBlock Text="Login" 
                               Foreground="#FF4DA6FF"
                               Cursor="Hand"
                               MouseLeftButtonUp="Login_MouseLeftButtonUp">
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
