<Page x:Class="TriviaClient.HighScores"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Top Players">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.Background>
            <ImageBrush ImageSource="/Views/Images/highScoresBackground.jpg" Stretch="UniformToFill"/>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Best Scores"
                   FontSize="30"
                   Foreground="White"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,20,0,20"
                   Grid.Row="0" />

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding TopPlayers}"
                          HorizontalAlignment="Center"
                          Margin="0,10">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,10">
                            <Border Background="#33000000" 
                                    BorderBrush="#66FFFFFF" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Padding="12"
                                    Width="400">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.4"/>
                                </Border.Effect>
                                <TextBlock Text="{Binding}" 
                                           FontSize="22"
                                           FontWeight="SemiBold"
                                           Foreground="White"
                                           HorizontalAlignment="Center"
                                           TextTrimming="CharacterEllipsis"/>
                            </Border>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Button Content="Back to Menu" Width="150" Height="40"
                Click="BackToMenu_Click"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Grid.Column="1" Margin="0,10,10,0"
                Style="{StaticResource MenuButtonStyle}"/>

    </Grid>
</Page>