<Page x:Class="TriviaClient.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:TriviaClient"
      mc:Ignorable="d"
      Title="Login">

    <Grid Background="#E5E5E5E5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <!-- Main content container -->
        <Border CornerRadius="10" 
                Background="#FBFBFBFB" 
                VerticalAlignment="Center" HorizontalAlignment="Center"
                MaxWidth="350" MaxHeight="400" Width="350" Height="400">

            <StackPanel Margin="20" VerticalAlignment="Center">
                <!-- Header -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,3">
                    <TextBlock Text="Login" 
                               Foreground="Black"
                               FontSize="30" FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"/>
                </StackPanel>

                <!-- Username -->
                <TextBlock Text="Username" Foreground="#EE101010" Margin="5,0"/>
                <TextBox x:Name="UsernameTextBox" 
                         Height="40" Margin="0,5,0,5"
                         Padding="10"
                         Background="#20202020"
                         Foreground="Black"
                         BorderBrush="#3A3A3A3A"
                         BorderThickness="2"
                         CaretBrush="Black"
                         TextChanged="InputChanged"/>

                <!-- Password -->
                <TextBlock Text="Password" Foreground="#EE101010" Margin="5,0"/>
                <PasswordBox x:Name="PasswordBox" 
                             Height="40" Margin="0,5,0,15"
                             Padding="10"
                             Background="#20202020"
                             Foreground="Black"
                             BorderBrush="#3A3A3A3A"
                             BorderThickness="2"
                             PasswordChanged="InputChanged"/>

                <!-- Login button -->
                <Button x:Name="LoginButton" 
                        Content="Login"
                        Height="40"
                        Background="#EAEAEAEA"
                        Foreground="#CF111111"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        IsEnabled="False"
                        Click="LoginButton_Click"
                        Width="310"/>

                <!-- Sign up link -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="Don't have an account? " Foreground="#FFA0A0A0"/>
                    <TextBlock Text="Sign up" 
                               Foreground="#FF007ACC"
                               Cursor="Hand"
                               MouseLeftButtonUp="SignUp_MouseLeftButtonUp"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
