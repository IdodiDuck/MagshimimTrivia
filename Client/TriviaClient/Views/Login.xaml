<Page x:Class="TriviaClient.Login"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Login">

    <Grid>
        <Image Source="Images/loginBackground.jpg" Stretch="Fill" Panel.ZIndex="0"
       HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

        <Grid Background="#80000000" Panel.ZIndex="1">
            <Border CornerRadius="10" 
                    Background="#FF2A2A2A" 
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    MaxWidth="350" MaxHeight="400" Width="350" Height="400">

                <StackPanel Margin="20" VerticalAlignment="Center">
                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,3">
                        <TextBlock Text="Login" Foreground="White" FontSize="30" FontWeight="Bold" Margin="0,10,0,0"/>
                    </StackPanel>

                    <TextBlock Text="Username" Foreground="#FFCCCCCC" Margin="5,0"/>
                    <TextBox x:Name="UsernameTextBox" Height="40" Margin="0,5,0,5" Padding="10"
                             Background="#FF3A3A3A" Foreground="White" BorderBrush="#FF555555" BorderThickness="2"
                             CaretBrush="White" TextChanged="Input_TextChanged"/>

                    <TextBlock Text="Password" Foreground="#FFCCCCCC" Margin="5,0"/>
                    <PasswordBox x:Name="PasswordBox" Height="40" Margin="0,5,0,15" Padding="10"
                                 Background="#FF3A3A3A" Foreground="White" BorderBrush="#FF555555" BorderThickness="2"
                                 CaretBrush="White" PasswordChanged="PasswordBox_PasswordChanged"/>

                    <TextBlock x:Name="ErrorTextBlock" Foreground="Red" FontWeight="Bold"
                               Margin="0,-10,0,0" Visibility="Collapsed" TextWrapping="Wrap"/>

                    <Button x:Name="LoginButton" Content="Login" Height="40" Width="310"
                            Background="white" Foreground="#FF3A3A3A" FontWeight="Bold"
                            BorderThickness="0" Cursor="Hand" IsEnabled="False" Click="LoginButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#FF005A9E"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#FF555555"/>
                                        <Setter Property="Foreground" Value="#FFAAAAAA"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                        <TextBlock Text="Don't have an account? " Foreground="#FFAAAAAA"/>
                        <TextBlock Text="Sign up" Foreground="#FF4DA6FF" Cursor="Hand"
                                   MouseLeftButtonUp="SignUp_MouseLeftButtonUp">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="TextDecorations" Value="Underline"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>