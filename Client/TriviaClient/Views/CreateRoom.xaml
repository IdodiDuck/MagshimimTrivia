<Page x:Class="TriviaClient.CreateRoom"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:TriviaClient"
      mc:Ignorable="d"
      Title="CreateRoom"
      Background="#FF1E1E1E">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2A2A2A" Padding="15">
            <TextBlock Text="Create New Room" 
                       Foreground="#FFCCCCCC"
                       FontSize="24"
                       FontWeight="Bold"/>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1" 
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Width="400">

            <!-- Room Name -->
            <StackPanel>
                <TextBlock Text="Room Name" 
                           Foreground="#FFCCCCCC"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="RoomNameTextBox"
                         Height="40"
                         Padding="10"
                         FontSize="16"
                         TextChanged ="Input_TextChanged"/>
            </StackPanel>

            <!-- Number of Players -->
            <StackPanel>
                <TextBlock Text="Number of Players" 
                           Foreground="#FFCCCCCC"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="PlayersNumberTextBox"
                         Height="40"
                         Padding="10"
                         FontSize="16"
                         TextChanged ="Input_TextChanged"/>
            </StackPanel>

            <!-- Number of Questions -->
            <StackPanel>
                <TextBlock Text="Number of Questions" 
                           Foreground="#FFCCCCCC"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="QuestionsNumberTextBox"
                         Height="40"
                         Padding="10"
                         FontSize="16"
                         TextChanged ="Input_TextChanged"/>
            </StackPanel>

            <!-- Time Per Question -->
            <StackPanel>
                <TextBlock Text="Time Per Question (seconds)" 
                           Foreground="#FFCCCCCC"
                           Margin="0,0,0,5"/>
                <TextBox x:Name="QuestionTimeTextBox"
                         Height="40"
                         Padding="10"
                         FontSize="16"
                         TextChanged ="Input_TextChanged"/>

                <TextBlock x:Name="ErrorTextBlock"
                           Foreground="Red"
                           FontWeight="Bold"
                           Margin="0,0,0,-20"
                           Visibility="Collapsed"
                           TextWrapping="Wrap"/>
            </StackPanel>
            
            <!-- Create Button -->
            <Button x:Name="CreateButton"
                    Content="Create Room"
                    Height="50"
                    FontSize="16"
                    FontWeight="Bold"
                    Background="#E5E5E5E5"
                    Foreground="Black"
                    BorderThickness="0"
                    Margin="0,20,0,0"
                    IsEnabled="False"
                    Click="CreateButton_Click"/>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF2A2A2A" Padding="10">
            <Button x:Name="BackButton"
                    Content="BACK TO MENU"
                    HorizontalAlignment="Left"
                    Width="150"
                    Click="BackButton_Click"/>
        </Border>
    </Grid>
</Page>
