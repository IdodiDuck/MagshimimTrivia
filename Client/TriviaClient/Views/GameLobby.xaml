<Page x:Class="TriviaClient.GameLobby"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local="clr-namespace:TriviaClient"
      mc:Ignorable="d"
      Title="GameLobby">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#E5E5E5E5" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBlock x:Name="RoomText" 
                           Text="Room: " 
                           Foreground="Black"
                           FontSize="18"
                           FontWeight="Bold"/>

                <TextBlock x:Name="RoomNameText"
                           Text="{Binding Path=RoomName, UpdateSourceTrigger=PropertyChanged}"
                           Foreground="Black"
                           FontSize="16"
                           Margin="20,0,0,0"/>

                <TextBlock x:Name="RoomStatusText"
                           Text="Waiting for players..."
                           Foreground="Black"
                           FontSize="16"
                           Margin="20,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Players List -->
            <Border Grid.Column="0" Margin="20" CornerRadius="5" BorderBrush="#FFDDDDDD" BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Players in Room:" 
                               FontSize="16"
                               FontWeight="Bold"
                               Margin="10,10,10,5"/>
                    <ListView x:Name="PlayersListView"
          Height="300"
          BorderThickness="0"
          Background="Transparent">

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="5" Padding="8" Margin="5"
                    Background="White" HorizontalAlignment="Stretch">
                                    <TextBlock Text="{Binding}" FontSize="14" Foreground="Black"/>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Margin" Value="5"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                <Setter Property="IsHitTestVisible" Value="False"/>
                            </Style>
                        </ListView.ItemContainerStyle>

                    </ListView>
                </StackPanel>
            </Border>

            <!-- Game Info -->
            <StackPanel Grid.Column="1" Width="250" Margin="0,20,20,20">
                <Border CornerRadius="5" BorderBrush="#FFDDDDDD" BorderThickness="1" Padding="10" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Game Settings:" 
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Questions:" Width="120"/>
                            <TextBlock x:Name="QuestionCountText" Text="{Binding Path=QuestionAmount, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Time per question:" Width="120"/>
                            <TextBlock x:Name="TimePerQuestionText" Text="{Binding Path=TimePerQuestion, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="Max players:" Width="120"/>
                            <TextBlock x:Name="MaxPlayersText" Text="{Binding Path=MaxPlayers, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#FFEEEEEE" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                <!-- Admin Panel -->
                <StackPanel x:Name="AdminButtonsPanel" Orientation="Horizontal" Visibility="Collapsed" >
                    <Button x:Name="StartGameButton"
                    Content="START GAME"
                    Margin="0,0,10,0"
                    Width="120"
                    Click="StartGameButton_Click"/>
                    <Button x:Name="CloseRoomButton"
                    Content="CLOSE ROOM"
                    Width="120"
                    Click="CloseRoomButton_Click"/>
                </StackPanel>

                <!-- Regular Member Panel -->
                <Button x:Name="LeaveButton"
                Content="LEAVE ROOM"
                Width="120"
                Visibility="Collapsed"
                Click="LeaveButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
